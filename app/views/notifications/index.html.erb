<% provide(:title, "通知")  %>
<div class="container">
  <%= link_to root_path, class:"btn-back" do %>
  <i class="fa fa-arrow-left" aria-hidden="true"></i> Back
<% end %>
  <% notifications = @nolaltifications.where.not(visitor_id: current_user.id) %>
