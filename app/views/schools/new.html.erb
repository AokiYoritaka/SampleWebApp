<% provide(:title, "学校検索")  %>
<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="rev-card px-2 pb-2 pt-2">
        <h1 class="title-h1">レビューする学校を検索してください</h1>
        <div class="result"></div>
        <div class="webkit-center mt-5">
          <input type="text" name="namae" id="name" class="form-control mr-sm-2 x-300 mt-4" placeholder="学校名や国名を入力">
          <%= button_tag type: "submit", class: "btn btn-info inline mt-2 mb-4", id: "school_search" do %>
          <i class="fa fa-search" aria-hidden="true"></i>
          検索
          <% end %>
        </div>
        <div class="row" id="school_lists"></div>
      </div>
    </div>
  </div>
</div>