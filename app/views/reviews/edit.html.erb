<% provide(:title, "レビューの編集：#{@review.title}")  %>
<div class="container">

  <div class="row">
    <%= link_to school_review_path, class:"btn-back" do %>
    <i class="fa fa-arrow-left" aria-hidden="true"></i> Back
    <% end %>
  </div>

  <%= render "schools/school_details", school: @school %>

  <div class="row">
    <div class="col-md-12 rev-card">
      <div class="rev-card-title">
        <i class="fa fa-check" aria-hidden="true"></i> レビューを編集する
      </div>
        <%= render "error_messages", review: @review %>
        <%= render "form", review: @review %>
    </div>
  </div>
</div>