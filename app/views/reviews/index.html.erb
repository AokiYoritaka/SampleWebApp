<% provide(:title, "レビューリスト")  %>
<div class="container">
  <%= link_to root_path, class:"btn-back" do %>
    <i class="fa fa-arrow-left" aria-hidden="true"></i> Back
  <% end %>
  <div class="row"> 
    <div class="col-md-12">
      <h1 class="title-rev">レビューリスト</h1>

        <div class="row">
          <div class="col-4">
            <div class="webkit-center hidden_box">
              <label for="label1">
                <span class="keyword-search">
                  <i class="fa fa-search" aria-hidden="true">
                    キーワードからレビューを検索する
                  </i>
                </span>
              </label>
              <input type="checkbox" id="label1"/>
              <div class="hidden_show pl-5">
                  <%= render "layouts/search_form" %>
              </div>
            </div>
          </div>

          <div class="col-4">
            <span class="keyword-search">
              <i class="fa fa-hashtag" aria-hidden="true">
                <%= link_to "タグからレビューを検索する", alltags_path %>
              </i>
            </span>
          </div>

          <div class="col-4 pl-1">
            <span class="keyword-search">
              <i class="fa fa-building" aria-hidden="true">
                <%= link_to "学校からレビューを検索する", schools_path %>
              </i>
            </span>
          </div>
        </div>

        <%= render "layouts/review_index", reviews: @reviews %>
      </div>
    </div>
  </div>
  <%= paginate @reviews %>
</div>